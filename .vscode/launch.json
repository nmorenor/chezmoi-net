    "version": "0.2.0",
    "configurations": [
        {
          "name": "Launch Server",
          "type": "go",
          "request": "launch",
          "mode": "debug",
          "cwd": "${workspaceFolder}",
          "program": "${workspaceFolder}/cmd/server/server.go"
        },
        {
          "name": "Launch Host",
          "type": "go",
          "request": "launch",
          "mode": "debug",
          "cwd": "${workspaceFolder}",
          "program": "${workspaceFolder}/cmd/client/client.go",
          "console": "integratedTerminal"
        },
        {
          "name": "Launch Join",
          "type": "go",
          "request": "launch",
          "mode": "debug",
          "cwd": "${workspaceFolder}",
          "program": "${workspaceFolder}/cmd/client/client.go",
          "console": "integratedTerminal",
          "args": [
            "-join"
          ]
        }

      ]
}